<!DOCTYPE html>
<html>
  <head>
    <title>Splurty</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="row">
      <div class="col-3">
        <div class="circle">
          <br />
          Gamer's
          <br />
          favorite
          <br />
          quotes
        </div>

      </div>
      <div class="col-4 slogan">
        Splurting Out Video Game Quotes Since 2019
      </div>
      <div class="col-5 links">
        <table>
          <tr>
            <td><%= link_to 'Contribute', '#' %></td>
            <td><%= link_to 'About', '#' %></td>
          </tr>
        </table>
      </div>
    </header>

    <hr />

    <br class="clear" />


    <%= yield %>
  </body>
</html>
